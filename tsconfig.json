{
    "compilerOptions": {
        "outDir": "dist",
        "rootDir": "src",
        "target": "ES6",
        "module": "commonjs",
        "strict": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "resolveJsonModule": true,
        "declaration": true
    },
    "include": ["./src/**/*"]
}
